<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">
			Edit <%= movie.name%>
		</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/movies/<%= movie._id %>?_method=PUT" method = "POST">
				<div class="form-group">
					<input class="form-control" type = "text" name = "movie[name]" value="<%= movie.name %>">
				</div>
				<div class="form-group">
					<input class="form-control" type = "text" name = "movie[image]" value="<%= movie.image %>">
				</div>
				<div class="form-group">
					<input class="form-control" type = "text" name = "movie[description]" value="<%= movie.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-default btn-lg btn-primary btn-block">
						Submit!
					</button>
				</div>

			</form>
			<a href="/movies">Go back to Main Gallery</a>
		</div>
	</div>

	
</div>


<%- include("../partials/footer") %>